{
    "functions": {
        "api/*.ts": {
            "runtime": "vercel-node@latest"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico|vite.svg).*)",
            "destination": "/index.html"
        }
    ]
}